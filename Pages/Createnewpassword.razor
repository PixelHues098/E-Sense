@page "/createpassword"
<MudPaper Class= " mx-auto mt-14 border-solid border mud-border-primary-text" Fluid="true" align="center" Height="580px" Width="607px" Elevation= "20">
    <MudContainer MaxWidth="MaxWidth.Small">
        <MudPaper Height="390px" Width="100%" Square="true" Elevation="0">
            <MudText Class="mx-auto mt-9" Align="Align.Center" Typo="Typo.h3"><b>Create New Password</b></MudText>
             
              <MudPaper Class = "mt-2" Style = " border-radius:3% 3%; background-color: #D9D9D9BF;" align = "center" Elevation = "0" Height ="30%" Width = "83%" >
                
              <MudPaper Style = "border-radius:3% 3%;" Elevation = "0 " Height = "10%">&nbsp;</MudPaper>
               
                <MudText Class=" mt-5 ml-5 mr-5 " Style = "height:100%;" Align="Align.Center" Typo="Typo.h6">Please create a new password that you don't use on any other sites.<br>    
              

                </MudText>               
                
                </MudPaper>
          
            
              <MudTextField Class = "ml-12 mr-2 mt-8" Style = "width:460px;"  @bind-Value="Createpass" Label="Create new password" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
              <MudTextField Class = "ml-12 mr-2 mt-8" Style = "width:460px;"  @bind-Value="Confirmpass" Label="Confirm new password" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />

            

                

            

            
           
            <MudPaper Class="d-flex justify-center flex-grow-20 gap-4" Elevation="0">
           
            

           
            
            </MudPaper>
            <MudPaper align = "center" Elevation  = "0" Width = "55%" Height = "13%"  > 
            
            <MudButton Variant="Variant.Filled" Style = " font-size:20px; width:100%; height:100%; background-color: #000000; color:white; left =50px;" Class ="mt-10 mb-4 rounded-pill" ><b>Proceed</b></MudButton>
            
            </MudPaper>

            
           
             
            
    </MudPaper>
        
        
    </MudContainer>
</MudPaper>

@code {
   
    public string Createpass { get; set;} = string.Empty;
    public string Confirmpass { get; set;} = string.Empty;

    bool isShow;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;

    void ButtonTestclick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
}
    }
}