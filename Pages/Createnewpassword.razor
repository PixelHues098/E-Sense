@page "/createpassword"

<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Class="rounded-lg">

        <MudContainer>
            <MudText Class="mb-5 pt-6" Align="Align.Center" Typo="Typo.h3">Create New Password</MudText>

            <MudText Class=" mt-5 ml-5 mr-5 mud-theme-primary" Align="Align.Center" Typo="Typo.h6">
                Please create a new password that you don't use on any other sites.
            </MudText>

        </MudContainer>


        <MudContainer Class="pt-9 pb-5 px-16 d-flex flex-column gap-4">



            <MudTextField @bind-Value="Password" Label="Password" Variant="Variant.Outlined" InputType="@PasswordInput"
                Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ShowHidePassClick"
                AdornmentAriaLabel="Show Password" />

            <MudTextField Class="mt-5" @bind-Value="CPassword" Label="Confirm Password" Variant="Variant.Outlined"
                InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon"
                OnAdornmentClick="ShowHidePassClick" AdornmentAriaLabel="Show Password" />

            <MudButton Class="mr-16 ml-16 mb-6 mt-5 gap-4 rounded-pill" Variant="Variant.Filled" Color="Color.Primary"
                Size="Size.Large">Change Password</MudButton>


        </MudContainer>

    </MudPaper>
</MudContainer>

@code {


    public string Password { get; set; } = string.Empty;
    public string CPassword { get; set; } = string.Empty;




    bool isShow;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;

    void ShowHidePassClick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else
        {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
    }
}


