@* TODO: Add filter buttons and related functionality here *@
<MudText Align="Align.Left" Typo="Typo.h5" Class="mb-4  mt-6">Backlog</MudText>

<MudPaper Class="d-flex align-start" Elevation="0">
<MudTextField Style="width:200px;"  @bind-Value="Search" Label="Search" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Filled.Search" AdornmentColor="Color.Secondary" />

<MudPaper Class=" mt-3 d-flex" Width="900px" Height="60px" Elevation="0">
<MudAvatarGroup Style="top:500px;" Max="@max" Spacing="@spacing" MaxColor="Color.Primary">
    <MudAvatar Image="images/n.png" />
    <MudAvatar Image="images/e.jpg" />
    <MudAvatar Image="images/k.png" />
    <MudAvatar Image="images/o.png" />
</MudAvatarGroup>
<MudFab DisableElevation="true"  StartIcon="@Icons.Filled.PersonAddAlt1" Size="Size.Small" />
</MudPaper>


<MudPaper Class=" mt-2 d-flex" Width="120px" Elevation="0">
<MudSelect Style="width:90px;" Margin="Margin.Dense" Label="Group by" T="string" Variant="Variant.Filled">
    <MudSelectItem Value="@("None")" />
    <MudSelectItem Value="@("Asignee")" />
    <MudSelectItem Value="@("Subtask")" />
</MudSelect>
</MudPaper>

</MudPaper>

@code{
    public string Search { get; set;}
    int max = 5;
    int spacing = 4;
}