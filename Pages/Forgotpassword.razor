@page "/forgotpassword"

<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Class="rounded-lg" Elevation = "20">

        <MudContainer>
            <MudText Class=" pt-6" Align="Align.Center" Typo="Typo.h3">Forgot Password</MudText>
            <MudText Class=" pt-3 rounded" Align="Align.Center" Typo="Typo.h5">Please enter your e-mail address</MudText>

        </MudContainer>


        <MudContainer Class="pt-9 pb-5 px-16 d-flex flex-column gap-4">

            <MudTextField @bind-Value="Email" Label="Enter your email address" Variant="Variant.Outlined"></MudTextField>

            <MudButton Class="mr-16 ml-16 mb-6 mt-5 gap-4 rounded-pill" Variant="Variant.Filled" Color="Color.Primary"
                Size="Size.Large">Proceed</MudButton>

  
            
        <MudPaper Class= "rounded mb-8" Style = "@($"color:{Colors.Grey.Darken3}; background:{Colors.Grey.Lighten2};")">

            <MudText Class="ma-5" Align="Align.Center" Typo="Typo.h6">
                Once you proceed, we will send a new password of your account. You can change it later if you want to.
            </MudText>
            
        </MudPaper>


        </MudContainer>

    </MudPaper>
</MudContainer>

@code {

      public string Email { get; set; } = string.Empty;


}
