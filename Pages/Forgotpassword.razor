             <MudTextField Class = "ml-9 mt-8 mb-8" Style = "width:460px;" @bind-Value="Email" Label="Enter your e-mail address" Variant="Variant.Outlined"></MudTextField>
            
           

            

                

            

            
           
            <MudPaper Class="d-flex justify-center flex-grow-20 gap-4" Elevation="0">
           
            

           
            
</MudPaper>
            <MudPaper align = "center" Elevation  = "0" Width = "55%" Height = "13%"  > 
            
